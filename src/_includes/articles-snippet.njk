

{# uses the same template every blog post #}
    <div class="col-4 service">
         <i class="fas fa-sitemap fa-5x"></i>
        <image src="{{post.data.image}}" alt="{{post.data.imageAlt}}" class="snippet_image"/>
        h3><a href="{{post.url}}">{{ post.data.title}}</a></h3>
        <div class="card">
            <p class="snippet_meta">by <span>{{post.data.author}}</span> on <span>{{post.date | postDate}}</span></p>
            <p class="snippet_body">{{post.data.description}}</p>
            </div>
            <a href="{{post.url}}" class="btn btn-primary">Continue Reading</a>
    </div> 